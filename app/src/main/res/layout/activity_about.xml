<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.emaan.homeautomation.about"
    android:background="@mipmap/screen">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HOME AUTOMATION Application Connect Arduino BlueTooth HC-05 , HC-06 Through Your Mobile Bluetooth and Control Your Home on Your ARDUINO Easily ."
        android:id="@+id/textView4"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="20sp"
        android:textColor="@android:color/holo_blue_light"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:onClick="tweet"
        android:id="@+id/twitter"
        android:background="@drawable/twitter"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp" />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/gmail"
        android:onClick="gmail"

        android:background="@drawable/gmail"
        android:layout_above="@+id/twitter"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="match_parent"
        android:onClick="fb"

        android:layout_height="40dp"
        android:background="@drawable/facebook"
        android:layout_above="@+id/gmail"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="200dp"
        android:src="@drawable/developerperson"
        android:id="@+id/developer"
        android:layout_height="180dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
