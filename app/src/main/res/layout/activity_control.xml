<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.emaan.homeautomation.ControlActivity"
    android:background="@mipmap/screen">


    <LinearLayout
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/LinearLayout1"
        android:layout_height="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="PORT 1"
            android:id="@+id/textView1"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_below="@+id/linearLayout" />

        <ImageButton
            android:id="@+id/off_port1"
            android:src="@drawable/off"
            android:background="@drawable/off"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/on_port1"
            android:src="@drawable/on"
            android:background="@drawable/on"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:id="@+id/LinearLayout3"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/LinearLayout2"
        android:layout_alignParentStart="true"
        android:layout_height="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="PORT 3"
            android:id="@+id/textView3"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_below="@+id/linearLayout" />

        <ImageButton
            android:id="@+id/off_port3"
            android:src="@drawable/off"
            android:background="@drawable/off"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/on_port3"
            android:src="@drawable/on"
            android:background="@drawable/on"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:id="@+id/LinearLayout4"
        android:layout_below="@+id/LinearLayout3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:layout_height="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="PORT 4"
            android:id="@+id/textView4"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_below="@+id/linearLayout" />

        <ImageButton
            android:id="@+id/off_port4"
            android:src="@drawable/off"
            android:background="@drawable/off"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/on_port4"
            android:src="@drawable/on"
            android:background="@drawable/on"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:id="@+id/LinearLayout5"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/LinearLayout4"
        android:layout_alignParentStart="true"
        android:layout_height="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="PORT 5"
            android:id="@+id/textView5"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_below="@+id/linearLayout" />

        <ImageButton
            android:id="@+id/off_port5"
            android:src="@drawable/off"
            android:background="@drawable/off"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/on_port5"
            android:src="@drawable/on"
            android:background="@drawable/on"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:id="@+id/LinearLayout6"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/LinearLayout5"
        android:layout_alignParentStart="true"
        android:layout_height="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="PORT 6"
            android:id="@+id/textView6"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_below="@+id/linearLayout" />

        <ImageButton
            android:id="@+id/off_port6"
            android:src="@drawable/off"
            android:background="@drawable/off"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/on_port6"
            android:src="@drawable/on"
            android:background="@drawable/on"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:id="@+id/LinearLayout2"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/LinearLayout1"
        android:layout_alignParentStart="true"
        android:layout_height="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="PORT 2"
            android:id="@+id/textView2"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_below="@+id/linearLayout" />

        <ImageButton
            android:id="@+id/off_port2"
            android:src="@drawable/off"
            android:background="@drawable/off"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/on_port2"
            android:src="@drawable/on"
            android:background="@drawable/on"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:id="@+id/abt"
        android:onClick="about"
        android:layout_x="238dp"
        android:layout_y="434dp"
        android:background="@drawable/about"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:id="@+id/discnt"
        android:background="@drawable/disconnect"
        android:layout_x="38dp"
        android:layout_y="414dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:id="@+id/LinearLayout9"
        android:layout_height="40dp"
        android:layout_above="@+id/abt"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp">

        <ImageButton
            android:id="@+id/off_port8"
            android:background="@drawable/cdoor"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/on_port8"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/odoor" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="22dp"
        android:id="@+id/LinearLayout10"
        android:layout_below="@+id/LinearLayout8"
        android:layout_alignParentStart="true">

        <TextView
            android:text="CELL #"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView8"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="20dp"
            android:textColor="@android:color/background_light" />

        <EditText
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/mobile_number"
            android:foregroundTint="@color/colorAccent"
            android:textColor="?android:attr/statusBarColor" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/LinearLayout8"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/LinearLayout6"
        android:layout_alignParentStart="true">

        <TextView
            android:text="PASSWORD"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView7"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/background_light"
            android:textSize="20dp" />

        <EditText
            android:layout_width="191dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:foregroundTint="@color/colorAccent"
            android:textColor="?android:attr/statusBarColor" />

    </LinearLayout>

</RelativeLayout>
